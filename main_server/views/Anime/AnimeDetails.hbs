<div id="btn">
    <div id ="search">
        <form id="searchForm" action="/Anime" method="GET" style="display: inline-block; margin-bottom: 10px;">
            <input type="text" id="searchInput" name="search" autocomplete="on" placeholder="Search Anime...">

            <!--    <div id="autocomplete-list" class="autocomplete-items"></div>-->
            <button id ="submitbtn" type="submit" class="search-btn">Search</button>
        </form>

    </div>

    <!--    <div id="autocomplete-list" class="autocomplete-items"></div>-->
    <div id="pages">
        {{#if (gt currentPage 1)}}
            <a class="pagination-btn" href="/Anime?page={{subtract currentPage 1}}&size={{pageSize}}">Previous</a>
        {{/if}}

        <span class="page-info">Page {{currentPage}} of {{totalPages}}</span>

        {{#if (lt currentPage totalPages)}}
            <a class="pagination-btn" href="/Anime?page={{add currentPage 1}}&size={{pageSize}}">Next</a>
        {{/if}}
    </div>



</div>

<table class="characters-table">
    <thead>
    <tr>
        <th>Rank</th>
        <th>Title</th>
        <th>TV</th>
        <th>Year</th>
        <th>Favorites</th>
    </tr>
    </thead>
    <tbody>
    {{#each Anime}}
        <tr>
            <!-- Rank -->
            <td>{{this.rank}}</td>

            <!-- Character Image + Name + Kanji -->
            <td class="character-cell">
                <img src="{{this.imageUrl}}" alt="{{this.title}}" class="character-image"/>
                <div class="character-names">
                    <a  href="/Anime/{{this.malId}}" class="character-name">{{this.title}}</a>
                    {{#if this.titleJapanese}}
                        <span class="character-kanji">({{this.titleJapanese}})</span>
                    {{/if}}
                </div>
            </td>




            <!-- Favorites -->
            <td>{{this.type}}</td>
            <td>{{this.year}}</td>
            <td>{{this.favorites}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>

