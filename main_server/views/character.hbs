<div id="btn">
    <div id ="search">
        <form id="searchForm" action="/all" method="GET" style="display: inline-block; margin-bottom: 10px;">
            <input type="text" id="searchInput" name="search" autocomplete="on" placeholder="Search name...">

            <!--    <div id="autocomplete-list" class="autocomplete-items"></div>-->
            <button id ="submitbtn" type="submit" class="search-btn">Search</button>
        </form>

    </div>

    <!--    <div id="autocomplete-list" class="autocomplete-items"></div>-->
    <div id="pages">
        {{#if (gt currentPage 1)}}
            <a class="pagination-btn" href="/all?page={{subtract currentPage 1}}&size={{pageSize}}">Previous</a>
        {{/if}}

        <span class="page-info">Page {{currentPage}} of {{totalPages}}</span>

        {{#if (lt currentPage totalPages)}}
            <a class="pagination-btn" href="/all?page={{add currentPage 1}}&size={{pageSize}}">Next</a>
        {{/if}}
    </div>



</div>



<div class="characters-container">
    {{#each characters}}
        <div class="character-card">
            <img src="{{this.image}}" alt="{{this.characterName}}" class="character-image"/>
            <div class="character-info">
                <a href="/character/{{this.characterId}}" class="character-name">{{this.characterName}}</a>

                <p class="character-role">Role: {{this.role}}</p>
                {{#if this.nameKanji}}
                    <p class="character-kanji">{{this.nameKanji}}</p>
                {{/if}}
            </div>
        </div>
    {{/each}}
</div>
